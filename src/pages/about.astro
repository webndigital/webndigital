---
import BaseLayout from '@layouts/BaseLayout.astro';
import ValueCard from '@components/ValueCard.astro';

const values = [
  {
    title: 'Client-Focused',
    description: 'Your success is our success. We work as an extension of your team, understanding your challenges and goals.',
    image: '/images/dashboard.png'
  },
  {
    title: 'Innovation',
    description: 'We stay at the forefront of technology, constantly exploring new ways to solve problems and create value.',
    image: '/images/ai-algorithms.png'
  },
  {
    title: 'Transparency',
    description: 'We believe in open communication and honest relationships. What you see is what you get.',
    image: '/images/code-is-yours.png'
  },
  {
    title: 'Excellence',
    description: 'We never settle for good enough. Every project deserves our best work and attention to detail.',
    image: '/images/forecasting.png'
  }
];

// About Page Schema Markup
const aboutSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "About WebnDigital",
  "description": "Learn about WebnDigital's mission to democratize AI and advanced technology.",
  "url": "https://webndigital.com/about",
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://webndigital.com"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "About",
        "item": "https://webndigital.com/about"
      }
    ]
  },
  "mainEntity": {
    "@type": "Organization",
    "name": "WebnDigital",
    "url": "https://webndigital.com",
    "description": "Leading AI solutions and digital transformation company",
    "foundingDate": "2020",
    "founder": {
      "@type": "Person",
      "name": "M.John Sezan",
      "jobTitle": "CEO"
    },
    "employee": [
      {
        "@type": "Person",
        "name": "M.John Sezan",
        "jobTitle": "Chief Executive Officer"
      },
      {
        "@type": "Person",
        "name": "Sophie Ward",
        "jobTitle": "Digital Marketing Manager"
      },
      {
        "@type": "Person",
        "name": "Oliver Grant",
        "jobTitle": "Head of Development"
      }
    ]
  }
};
---

<BaseLayout
  title="About Us - WebnDigital Story & Team | WebnDigital"
  description="Learn about WebnDigital's mission to democratize AI and advanced technology. Meet our expert team specializing in web development, artificial intelligence, and business intelligence solutions."
  keywords="about webndigital, our team, company mission, AI experts, web development team, technology company, digital transformation experts, London tech company"
  image="/og-about.png"
  schema={aboutSchema}
>
  <!-- Hero Section -->
  <section class="about-hero section">
    <div class="container">
      <h1 class="about-hero-title">
        <span class="about-hero-main">About WebnDigital</span>
        <span class="about-hero-accent italic-serif">Innovation is our DNA.</span>
      </h1>
      <p class="about-hero-description">
        We are pioneers in using Artificial Intelligence to create innovative solutions and improve people's lives. Our mission is to make advanced technology accessible to businesses of all sizes.
      </p>
    </div>
  </section>

  <!-- Story Section -->
  <section class="story-section section">
    <div class="container">
      <div class="story-grid">
        <div class="story-content">
          <h2 class="section-title">Our Story</h2>
          <p>
            Founded with a vision to democratize artificial intelligence, WebnDigital has grown from a small team of passionate technologists into a leading digital agency serving clients worldwide.
          </p>
          <p>
            We believe that innovation should be accessible to everyone. That's why we've dedicated ourselves to creating custom solutions that combine cutting-edge technology with practical business value.
          </p>
          <p>
            Today, we work with SMEs and enterprises across industries, helping them navigate the digital transformation journey with confidence and success.
          </p>
        </div>
        <div class="story-image">
          <img src="/images/ceo-profile.png" alt="Our team" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="values-section section">
    <div class="container">
      <span class="section-label">Our Values</span>
      <h2 class="section-title">What Drives Us</h2>
      <div class="values-grid">
        {values.map((value) => (
          <ValueCard
            title={value.title}
            description={value.description}
            image={value.image}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section id="team" class="team-section section">
    <div class="container">
      <h2 class="section-title text-center">Meet Our Team</h2>
      <p class="team-intro">
        Our diverse team of experts brings together decades of experience in AI, software development, and business strategy.
      </p>
      <div class="team-grid">
        <div class="team-member">
          <div class="member-image">
            <img src="/images/ceo-profile.png" alt="M.John Sezan" loading="lazy" />
          </div>
          <h3>M.John Sezan</h3>
          <p class="member-role">CEO & Founder</p>
          <p class="member-bio">
            With 15+ years in AI and software development, M.John leads our vision of making advanced technology accessible to all.
          </p>
        </div>
        <div class="team-member">
          <div class="member-image">
            <img src="/images/cto-profile.png" alt="Sophie Ward" loading="lazy" />
          </div>
          <h3>Sophie Ward</h3>
          <p class="member-role">Digital Marketing Manager</p>
          <p class="member-bio">
            Sophie drives our digital marketing strategy, creating compelling campaigns that connect our innovative solutions with the right audience.
          </p>
        </div>
        <div class="team-member">
          <div class="member-image">
            <img src="/images/dev-profile.png" alt="Oliver Grant" loading="lazy" />
          </div>
          <h3>Oliver Grant</h3>
          <p class="member-role">Head of Development</p>
          <p class="member-bio">
            Oliver leads our development team, architecting scalable solutions and ensuring code excellence across all our projects.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="about-cta section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to work with us?</h2>
        <p class="cta-text">Let's create something amazing together.</p>
        <a href="/contact" class="btn btn-primary">
          Get in Touch
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-hero {
    text-align: center;
    padding: 5rem 0 3rem;
  }
  
  .about-hero-title {
    margin-bottom: 1.5rem;
  }
  
  .about-hero-main {
    display: block;
    font-size: clamp(2.5rem, 5vw, 4.375rem);
    font-weight: 400;
    line-height: 1.05;
    margin-bottom: 0.5rem;
  }
  
  .about-hero-accent {
    display: block;
    font-size: clamp(2rem, 4vw, 4rem);
    line-height: 1.125;
  }
  
  .about-hero-description {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text-gray);
  }
  
  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .story-content p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-gray);
    margin-bottom: 1.5rem;
  }
  
  .story-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }
  
  .story-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .values-section {
    background: var(--color-white);
  }
  
  .section-label {
    display: block;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text-gray);
    margin-bottom: 0.5rem;
  }
  
  .section-title {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    line-height: 1.2;
    margin-bottom: 3rem;
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
  }
  
  .team-intro {
    max-width: 600px;
    margin: 1rem auto 3rem;
    text-align: center;
    font-size: 1.125rem;
    color: var(--color-text-gray);
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }
  
  .team-member {
    text-align: center;
  }
  
  .member-image {
    width: 200px;
    height: 200px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }
  
  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .team-member h3 {
    font-size: 1.375rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .member-role {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }
  
  .member-bio {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-gray);
  }
  
  .about-cta {
    background: var(--color-white);
    color: var(--color-black);
    text-align: center;
  }
  
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 400;
    margin-bottom: 1rem;
  }
  
  .cta-text {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    color: var(--color-text-gray);
  }
  
  .cta-content .btn {
    background: var(--color-primary);
    color: var(--color-white);
    border: 2px solid var(--color-primary);
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(0, 145, 255, 0.2);
  }
  
  .cta-content .btn:hover {
    background: transparent;
    color: var(--color-primary);
    box-shadow: 0 6px 20px rgba(0, 145, 255, 0.3);
    transform: translateY(-2px);
  }
  
  .text-center {
    text-align: center;
  }
  
  @media (max-width: 768px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .values-grid,
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
