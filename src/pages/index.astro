            </svg>
          </a>
          <button class="solutions-nav prev" aria-label="Previous" data-carousel="web">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="solutions-nav next" aria-label="Next" data-carousel="web">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div class="solutions-carousel-wrapper">
      <div class="solutions-carousel" data-carousel-track="web">
        {webProjects.map((project) => (
          <SolutionCard
            title={project.title}
            category={project.title}
            subtitle={project.subtitle}
            image={project.image}
            href={project.href}
            overlayColor="blue"
          />
        ))}
      </div>
    </div>
    <div class="container">
      <div class="solutions-dots" data-dots="web">
        {Array.from({ length: Math.ceil(webProjects.length / 4) }).map((_, i) => (
          <span class={`dot ${i === 0 ? 'active' : ''}`} data-index={i}></span>
        ))}
      </div>
    </div>
  </section>

  <!-- AI Projects Section -->
  <section class="solutions-section section">
    <div class="container">
      <div class="solutions-header">
        <div class="solutions-text">
          <span class="solutions-label">Solutions</span>
          <h2 class="solutions-title italic-serif">artificial intelligence</h2>
        </div>
        <div class="solutions-actions">
          <a href="/services#ai" class="explore-all-link">
