        <p class="hero-description">
          We work with Artificial Intelligence.<br>
          This means two things: we solve problems and create new opportunities.
        </p>
        <div class="hero-faq">
          <FAQWidget />
        </div>
      </div>
    </div>
  </section>

  <!-- Web Projects Section -->
  <section class="solutions-section section" id="web-solutions">
    <div class="container">
      <div class="solutions-header">
        <div class="solutions-text">
