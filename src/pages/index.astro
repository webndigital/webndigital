<script>
  // Typewriter animation for hero title
  function typeWriter(element: HTMLElement, text: string, speed: number = 80): Promise<void> {
    return new Promise((resolve) => {
      element.textContent = '';
      let i = 0;
      
      function type() {
        if (i < text.length) {
          element.textContent += text.charAt(i);
          i++;
          setTimeout(type, speed);
        } else {
          element.classList.add('typing-complete');
          setTimeout(() => resolve(), 500);
        }
      }
      
      type();
    });
  }

  async function initTypewriter() {
    const mainTitle = document.getElementById('typewriter-main');
    const accentTitle = document.getElementById('typewriter-accent');
    
    if (mainTitle && accentTitle) {
      // Wait a bit before starting
      await new Promise(resolve => setTimeout(resolve, 500));
      
      // Type main title
      await typeWriter(mainTitle, 'Artificial Intelligence,', 80);
      
      // Show and type accent title
      accentTitle.classList.add('visible');
      await typeWriter(accentTitle, 'make it yours.', 80);
    }
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTypewriter);
  } else {
    initTypewriter();
  }

  // Run on Astro page transitions
  document.addEventListener('astro:page-load', () => {
    if (window.location.pathname === '/') {
      initTypewriter();
    }
  });

  // Carousel functionality
  function initCarousel(carouselId: string) {
    const wrapper = document.querySelector(`[data-carousel-track="${carouselId}"]`)?.parentElement as HTMLElement;
    const track = document.querySelector(`[data-carousel-track="${carouselId}"]`) as HTMLElement;
    const prevBtn = document.querySelector(`[data-carousel="${carouselId}"].prev`) as HTMLButtonElement;
    const nextBtn = document.querySelector(`[data-carousel="${carouselId}"].next`) as HTMLButtonElement;
    const dotsContainer = document.querySelector(`[data-dots="${carouselId}"]`) as HTMLElement;
    
    if (!track || !prevBtn || !nextBtn || !dotsContainer || !wrapper) return;
    
    const totalItems = track.children.length;
    let currentPage = 0;
    
    // Get items per page based on screen size
    function getItemsPerPage() {
      const width = window.innerWidth;
      if (width <= 480) return 1;      // Mobile: 1 card
      if (width <= 768) return 2;      // Tablet: 2 cards
      return 4;                        // Desktop: 4 cards
    }
    
    // Check if navigation should be visible
    function shouldShowNavigation() {
      const itemsPerPage = getItemsPerPage();
      return totalItems > itemsPerPage;
    }
    
    function updateNavigationVisibility() {
      const shouldShow = shouldShowNavigation();
      prevBtn.style.display = shouldShow ? '' : 'none';
      nextBtn.style.display = shouldShow ? '' : 'none';
      dotsContainer.style.display = shouldShow ? '' : 'none';
    }
    
    function updateCarousel() {
      const itemsPerPage = getItemsPerPage();
      const totalPages = Math.ceil(totalItems / itemsPerPage);
      
      // Ensure currentPage is within bounds
      if (currentPage >= totalPages) {
        currentPage = totalPages - 1;
      }
      if (currentPage < 0) {
        currentPage = 0;
      }
      
      // Grid için container genişliği + gap kadar kaydır
      const containerWidth = wrapper.offsetWidth;
      const offset = currentPage * containerWidth;
      
      track.style.transform = `translateX(-${offset}px)`;
      
      // Update button states
      prevBtn.disabled = currentPage === 0;
      nextBtn.disabled = currentPage === totalPages - 1;
      
      // Update dots - show/hide based on total pages
      const allDots = dotsContainer.querySelectorAll('.dot');
      allDots.forEach((dot, index) => {
        if (index < totalPages) {
          (dot as HTMLElement).style.display = '';
          dot.classList.toggle('active', index === currentPage);
        } else {
          (dot as HTMLElement).style.display = 'none';
        }
      });
      
      // Update navigation visibility
      updateNavigationVisibility();
    }
    
    prevBtn.addEventListener('click', () => {
      if (currentPage > 0) {
        currentPage--;
        updateCarousel();
      }
    });
    
    nextBtn.addEventListener('click', () => {
      const itemsPerPage = getItemsPerPage();
      const totalPages = Math.ceil(totalItems / itemsPerPage);
      if (currentPage < totalPages - 1) {
        currentPage++;
        updateCarousel();
      }
    });
    
    // Dot navigation
    dotsContainer.addEventListener('click', (e) => {
      const dot = (e.target as HTMLElement).closest('.dot');
      if (!dot) return;
      
      const index = parseInt(dot.getAttribute('data-index') || '0');
      currentPage = index;
      updateCarousel();
    });
    
    // Update on resize
    let resizeTimeout: ReturnType<typeof setTimeout>;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        currentPage = 0; // Reset to first page on resize
        updateCarousel();
      }, 100);
    });
    
    // Initial update - wait for DOM to be ready
    setTimeout(() => {
      updateNavigationVisibility();
      updateCarousel();
    }, 50);
  }
  
  // Initialize carousels
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initCarousel('web');
      initCarousel('ai');
      initCarousel('advertising');
    });
  } else {
    initCarousel('web');
    initCarousel('ai');
    initCarousel('advertising');
  }

  // Customer logos auto slider
  function initCustomersSlider() {
    const slider = document.querySelector('.customers-slider') as HTMLElement;
    if (!slider) return;

    let currentSlide = 0;
    const totalSlides = slider.children.length;

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      const offset = currentSlide * -100;
      slider.style.transform = `translateX(${offset}%)`;
    }

    // Auto slide every 5 seconds
    setInterval(nextSlide, 5000);
  }

  // Initialize customers slider
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCustomersSlider);
  } else {
    initCustomersSlider();
  }
