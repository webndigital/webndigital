  "@type": "Service",
  "name": "WebnDigital Services",
  "description": "Complete digital solutions including custom web development, artificial intelligence, and advertising services.",
  "provider": {
    "@type": "Organization",
    "name": "WebnDigital",
    "url": "https://webndigital.com"
  },
  "areaServed": "Worldwide",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Digital Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Web & Mobile App Development",
          "description": "Custom web design, e-commerce platforms, mobile apps, and progressive web applications"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Artificial Intelligence Solutions",
          "description": "AI assistants, recommendations, sentiment analysis, and forecasting"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Digital Marketing",
          "description": "Google Ads, Instagram Ads, Facebook Ads, and budget management"
        }
      }
    ]
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://webndigital.com"
      },
      {
