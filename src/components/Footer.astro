                </svg>
                +44 7902 844675
              </a>
              <div class="contact-address">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <address>
                  London, UK<br>
                  SW1A 1AA
                </address>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} WebnDigital Ltd. All rights reserved.</p>
      <div class="footer-legal">
        <a href="/privacy">Privacy Policy</a>
        <span>•</span>
        <a href="/terms">Terms of Service</a>
        <span>•</span>
        <a href="/cookies">Cookie Policy</a>
      </div>
    </div>
  </div>
  
  <!-- Back to Top Button (Mobile) -->
  <button class="back-to-top" id="backToTop" aria-label="Back to top">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
      <path d="M10 15V5M10 5L5 10M10 5L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
</footer>

<style>
  .footer {
    background: var(--gradient-primary);
    color: var(--color-white);
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
  }
  
  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  }
  
  .footer-top {
    margin-bottom: 3rem;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
  }
  
  /* Brand Section */
  .footer-brand-section {
    max-width: 400px;
  }
  
  .footer-logo {
    display: inline-block;
    margin-bottom: 1rem;
    transition: transform var(--transition-base);
  }
  
  .footer-logo:hover {
    transform: translateY(-2px);
  }
  
  .footer-tagline {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    opacity: 0.95;
    font-weight: 400;
  }
  
  .footer-description {
    font-size: 0.9rem;
    line-height: 1.6;
    opacity: 0.85;
    margin-bottom: 1.5rem;
  }
  
  /* Social Icons */
  .footer-social {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }
  
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .social-icon:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px);
  }
  
  /* Columns */
  .footer-col {
    display: flex;
    flex-direction: column;
  }
  
  .footer-heading {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    margin-bottom: 1.25rem;
    opacity: 0.95;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.625rem;
  }
  
  .footer-links a {
    font-size: 0.9rem;
    color: var(--color-white);
    opacity: 0.8;
    transition: all 0.2s ease;
    display: inline-block;
  }
  
  .footer-links a:hover {
    opacity: 1;
    transform: translateX(3px);
  }
  
  /* Contact */
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }
  
  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.9rem;
    color: var(--color-white);
    opacity: 0.85;
    transition: all 0.2s ease;
  }
  
  .contact-link:hover {
    opacity: 1;
    transform: translateX(3px);
  }
  
  .contact-link svg {
    flex-shrink: 0;
  }
  
  .contact-address {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    font-size: 0.9rem;
    opacity: 0.85;
  }
  
  .contact-address address {
    font-style: normal;
    line-height: 1.5;
  }
  
  .contact-address svg {
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    font-size: 0.875rem;
    opacity: 0.75;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .footer-legal {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .footer-legal a {
    color: var(--color-white);
    opacity: 0.8;
    transition: opacity var(--transition-base);
  }
  
  .footer-legal a:hover {
    opacity: 1;
  }
  
  .footer-legal span {
    opacity: 0.5;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .footer {
      padding: 3.5rem 0 2rem;
    }
    
    .footer-main {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
    
    .footer-brand-section {
      grid-column: span 2;
      max-width: 100%;
    }
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }
    
    .footer-top {
      margin-bottom: 2.5rem;
    }
    
    .footer-main {
      grid-template-columns: 1fr;
      gap: 0;
    }
    
    .footer-brand-section {
      grid-column: 1;
      max-width: 100%;
      padding-bottom: 2rem;
      margin-bottom: 1.5rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .footer-logo {
      margin-bottom: 1.25rem;
    }
    
    .footer-tagline {
      font-size: 1.125rem;
      margin-bottom: 0.875rem;
    }
    
    .footer-description {
      font-size: 0.875rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }
    
    .footer-social {
      gap: 0.75rem;
      justify-content: flex-start;
    }
    
    .social-icon {
      width: 44px;
      height: 44px;
    }
    
    .social-icon:active {
      transform: scale(0.95);
    }
    
    .footer-accordion-col {
      margin-bottom: 0;
    }
    
    .footer-heading {
      font-size: 0.875rem;
      margin-bottom: 0;
      font-weight: 600;
    }
    
    .footer-links li {
      margin-bottom: 0;
    }
    
    .footer-links a {
      font-size: 0.9375rem;
      min-height: 48px;
      display: flex;
      align-items: center;
      padding: 0.625rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      transition: all 0.2s ease;
    }
    
    .footer-links a:active {
      transform: translateX(4px);
      opacity: 0.7;
    }
    
    .footer-links li:last-child a {
      border-bottom: none;
    }
    
    .contact-link {
      font-size: 0.9375rem;
      min-height: 48px;
      display: flex;
      align-items: center;
      gap: 0.875rem;
      padding: 0.625rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .contact-link:active {
      transform: translateX(4px);
      opacity: 0.7;
    }
    
    .contact-address {
      padding: 0.625rem 0;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 1.25rem;
      padding-top: 2rem;
    }
    
    .footer-legal {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
  
  @media (max-width: 480px) {
    .footer {
      padding: 2.5rem 0 1.5rem;
    }
    
    .footer-top {
      margin-bottom: 2rem;
    }
    
    .footer-main {
      gap: 0;
    }
    
    .footer-brand-section {
      padding-bottom: 1.75rem;
      margin-bottom: 1.25rem;
    }
    
    .footer-logo {
      margin-bottom: 1rem;
    }
    
    .footer-logo svg {
      width: 150px;
      height: 30px;
    }
    
    .footer-tagline {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }
    
    .footer-description {
      font-size: 0.8125rem;
      line-height: 1.6;
      margin-bottom: 1.25rem;
    }
    
    .footer-social {
      gap: 0.625rem;
    }
    
    .social-icon {
      width: 42px;
      height: 42px;
    }
    
    .social-icon svg {
      width: 18px;
      height: 18px;
    }
    
    .footer-accordion-toggle {
      padding: 0.875rem 0;
    }
    
    .footer-heading {
      font-size: 0.8125rem;
    }
    
    .accordion-icon {
      width: 14px;
      height: 14px;
    }
    
    .footer-links {
      padding: 0.875rem 0;
    }
    
    .footer-links a {
      font-size: 0.875rem;
      min-height: 44px;
      padding: 0.5rem 0;
    }
    
    .footer-contact {
      padding: 0.875rem 0;
    }
    
    .contact-link {
      font-size: 0.875rem;
      min-height: 44px;
      gap: 0.75rem;
      padding: 0.5rem 0;
    }
    
    .contact-link svg,
    .contact-address svg {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
    }
    
    .contact-address {
      padding: 0.5rem 0;
      font-size: 0.875rem;
    }
    
    .footer-bottom {
      font-size: 0.8125rem;
      padding-top: 1.75rem;
      gap: 1rem;
    }
    
    .footer-legal {
      font-size: 0.75rem;
      gap: 0.5rem;
      line-height: 1.6;
    }
    
    .footer-legal a {
      padding: 0.25rem 0.5rem;
    }
  }
  
  /* Mobile Accordion Styles */
  .footer-accordion-toggle {
    background: none;
    border: none;
    color: var(--color-white);
    cursor: pointer;
    padding: 0;
    width: 100%;
    text-align: left;
  }
  
  .accordion-icon {
    display: none;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .footer-accordion-content {
    overflow: hidden;
    transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  @media (max-width: 1024px) {
    .footer-accordion-toggle {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 1rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .accordion-icon {
      display: block;
      flex-shrink: 0;
    }
    
    .footer-accordion-toggle.active .accordion-icon {
      transform: rotate(180deg);
    }
    
    .footer-accordion-content {
      max-height: 0;
      transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .footer-accordion-col {
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }
    
    .footer-accordion-col:last-of-type {
      border-bottom: none;
    }
    
    .footer-links {
      padding: 1rem 0;
    }
    
    .footer-contact {
      padding: 1rem 0;
    }
  }
  
  @media (min-width: 1025px) {
    .footer-accordion-content {
      max-height: none !important;
    }
  }
  
  /* Back to Top Button */
  .back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: var(--gradient-primary);
    color: var(--color-white);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(0, 145, 255, 0.3);
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.8);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 9999;
  }
  
  .back-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }
  
  .back-to-top:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 6px 24px rgba(0, 145, 255, 0.4);
  }
  
  .back-to-top:active {
    transform: translateY(-1px) scale(0.98);
  }
  
  .back-to-top svg {
    animation: bounceUp 2s ease-in-out infinite;
  }
  
  @keyframes bounceUp {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-4px);
    }
  }
  
  @media (max-width: 768px) {
    .back-to-top {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 48px;
      height: 48px;
    }
  }
  
  @media (max-width: 480px) {
    .back-to-top {
      bottom: 1rem;
      right: 1rem;
      width: 44px;
      height: 44px;
    }
    
    .back-to-top svg {
      width: 18px;
      height: 18px;
    }
  }
</style>

<script>
  // Mobile Footer Accordion
  const initFooterAccordion = () => {
    const accordionToggles = document.querySelectorAll('.footer-accordion-toggle') as NodeListOf<HTMLButtonElement>;
    
    // Only activate accordion on mobile/tablet
    const isMobile = () => window.innerWidth <= 1024;
    
    accordionToggles.forEach((toggle) => {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        
        // Only work on mobile
        if (!isMobile()) return;
        
        const targetId = toggle.getAttribute('data-accordion');
        const content = document.querySelector(`[data-content="${targetId}"]`) as HTMLElement;
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
        
        // Close all other accordions
        accordionToggles.forEach((otherToggle) => {
          if (otherToggle !== toggle) {
            otherToggle.setAttribute('aria-expanded', 'false');
            otherToggle.classList.remove('active');
            const otherId = otherToggle.getAttribute('data-accordion');
            const otherContent = document.querySelector(`[data-content="${otherId}"]`) as HTMLElement;
            if (otherContent) {
              otherContent.style.maxHeight = '0';
            }
          }
        });
        
        // Toggle current accordion
        if (isExpanded) {
          toggle.setAttribute('aria-expanded', 'false');
          toggle.classList.remove('active');
          content.style.maxHeight = '0';
        } else {
          toggle.setAttribute('aria-expanded', 'true');
          toggle.classList.add('active');
          content.style.maxHeight = content.scrollHeight + 'px';
        }
      });
    });
    
    // Handle window resize
    let resizeTimer: ReturnType<typeof setTimeout>;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        if (!isMobile()) {
          // Reset accordions on desktop
          accordionToggles.forEach((toggle) => {
            toggle.setAttribute('aria-expanded', 'false');
            toggle.classList.remove('active');
            const targetId = toggle.getAttribute('data-accordion');
            const content = document.querySelector(`[data-content="${targetId}"]`) as HTMLElement;
            if (content) {
              content.style.maxHeight = '';
            }
          });
        }
      }, 250);
    });
  };
  
  // Initialize accordion
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFooterAccordion);
  } else {
    initFooterAccordion();
  }
  
  // Back to Top Button
  const backToTopBtn = document.getElementById('backToTop') as HTMLButtonElement;
  
  if (backToTopBtn) {
    // Show/hide button based on scroll
    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        backToTopBtn.classList.add('visible');
      } else {
        backToTopBtn.classList.remove('visible');
      }
    });
    
    // Smooth scroll to top
    backToTopBtn.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }
</script>
