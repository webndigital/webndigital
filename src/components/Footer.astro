const footerLinks = {
  company: [
    { label: 'The Company', href: '/about' },
    { label: 'Team', href: '/about#team' },
    { label: 'Services', href: '/services' },
    { label: 'Products', href: '/portfolio' },
    { label: 'Magazine', href: '/blog' },
    { label: 'Privacy Policy', href: '/privacy' }
  ],
  services: [
    { label: 'Artificial Intelligence', href: '/services#ai' },
    { label: 'Web Development', href: '/services#web' },
    { label: 'Business Intelligence', href: '/services#bi' },
    { label: 'Strategic Consulting', href: '/services#consulting' },
    { label: 'Training', href: '/services#training' }
