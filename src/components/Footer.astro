            </ul>
          </div>
        </div>
        
        <!-- Contact -->
        <div class="footer-col footer-accordion-col">
          <button class="footer-heading footer-accordion-toggle" data-accordion="contact" aria-expanded="false">
            <span>Get In Touch</span>
